@model CompiCat
<div class="mb-3">
    <label asp-for="@Model.Companies.Name" class="form-label">Firma İsmi</label>
    @if (Model.Companies == null)
    {
        <input asp-for="@Model.Companies.Name" class="form-control" id="Name">
    }
    else
    {
        <input asp-for="@Model.Companies.Name" class="form-control" id="Name" value="@Model.Companies.Name">
    }
    <span class="text-danger" asp-validation-for="@Model.Companies.Name"></span>
</div>
<div class="mb-3">
    <label asp-for="@Model.Companies.Adress" class="form-label">Firma Adresi</label>
    @if (Model.Companies == null)
    {
        <input asp-for="@Model.Companies.Adress" class="form-control" id="Adress">
    }
    else
    {
        <input asp-for="@Model.Companies.Adress" class="form-control" Value="@Model.Companies.Adress" id="Adress">
    }
    <span class="text-danger" asp-validation-for="@Model.Companies.Number"></span>
</div>
<div class="mb-3">
    <label asp-for="@Model.Companies.Number" class="form-label">Firma Numarası</label>
    @if (Model.Companies == null)
    {
        <input asp-for="@Model.Companies.Number" class="form-control" id="Number">
    }
    else
    {
        <input asp-for="@Model.Companies.Number" class="form-control" value="@Model.Companies.Number" id="Number">
    }
    <span class="text-danger" asp-validation-for="@Model.Companies.Number"></span>
</div>
@if (Model.calisanlar != null)
{
            <label class="form-label" asp-for="@Model.Companies.customer"></label>
            <select class="form-control" id="selectim">
                <option>Seçiniz</option>
                @foreach (var item in Model.calisanlar)
                {
                    <option>@item.Name"</option>
                }
            </select>
}

<label asp-for="@Model.Companies.picture" class="form-label">Firma Logosu</label>
<input type="file" asp-for="@Model.Companies.picture" class="form-control" multiple />

